<div class="container">
    <div class="box p-6 is-glass-white">
        <h2 class="title is-2">Hello, welcome!</h2>
        <p class="subtitle">Create a Tourisit ID</p>
        {{#ifEquals notifs "ERR_UNSECURE_PASSWORD"}}
        <div id="emailConfirmed" class="notification is-danger">
            Password has to be at least 8 character long.
        </div>
        {{/ifEquals}}
        {{#ifEquals notifs "ERR_DUP_EMAIL"}}
        <div id="emailConfirmed" class="notification is-danger">
            Email is already in use by another Tourisit ID.
        </div>
        {{/ifEquals}}
        <form method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="field">
                <label class="label">Full Name</label>
                <div class="control has-icons-left has-icons-right">
                    <input name="username" class="input" type="text" placeholder="Harold Lee" maxlength="128">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>
            <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left has-icons-right">
                    <input name="email" class="input" type="email" placeholder="lee@example.com">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>
            <div class="field mt-3">
                <label class="label">Password</label>
                <div class="control has-icons-left has-icons-right">
                    <input name="password" id="newPassword" class="input" type="password" placeholder="••••••••••••">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <p class="has-text-grey">By continuing, you agree to Tourisit's Terms of Service.</p>
            <br>
            <div class="field">
                <button class="button is-primary has-text-weight-medium" type="submit"><i
                        class="fas fa-arrow-right"></i>&ensp;Continue</button>
            </div>
        </form>
    </div>
    <div class="has-text-centered has-text-dark">
        <p><i class="fas fa-user"></i>&ensp;Already have an account?&ensp;<b><a href="/id/login">Login
                    instead</a></b></p>
    </div>
    <p class="has-text-centered">
        <br>
        <a class="has-text-danger" href="/"><i class="fas fa-long-arrow-alt-left"></i>&ensp;Return to
            Tourisit</a>
    </p>
</div>