<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="turbolinks-cache-control" content="no-cache">

    <title>{{meta.title}} - Tourisit</title>
    <!-- First-party libraries -->
    <link rel="stylesheet" href="/css/app.css">
    <script src="/js/slideshow.js"></script>

    <!-- Third-party libraries -->
    <script src="/third_party/jquery/jquery.min.js"></script>


    <link rel="stylesheet" href="/third_party/bulma/bulma.min.css">
    <script defer src="/js/navbar.js"></script>

    <script src="/third_party/turbolinks/turbolinks.js"></script>

    {{!--
    <link rel="stylesheet" href="/third_party/nprogress/nprogress.css">
    <script src="/third_party/nprogress/nprogress.js"></script> --}}

    {{!--
    <script>
        NProgress.start()
    </script> --}}
    <script>
        Turbolinks.start()
    </script>
    <script>
        $(document).on('turbolinks:before-load', function () {
            return $('div#message-container-display').fadeOut('fast');
        });
        $(document).on('turbolinks:load', function () {
            return $('div#message-container-display').fadeIn('fast');
        });
    </script>

    <link href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.min.js"
        integrity="sha512-fB746S+jyTdN2LSWbYSGP2amFYId226wpOeV4ApumcDpIttPxvk1ZPOgnwqwQziRAtZkiFJVx9F64GLAtoIlCQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script defer src="/js/chat.js" data-turbolinks="false"></script>
</head>

<body>
    {{>navbar}}
    <div class="section has-background-black chat-background"></div>
    <section class="section chat-box">
        <div class="container">
            <div class="box">
                <div class="columns p-0">
                    {{>sidebarChat}}
                    {{{body}}}
                </div>
            </div>
        </div>
    </section>

    {{>footer}}

    {{!-- Information for Socket IO request --}}
    <input id="currentChatID" type="hidden" value="{{nav.chatSidebar}}">
    <input id="currentUserID" type="hidden" value="{{data.currentUser.id}}">
</body>

</html>