<div class="modal is-active" id="AcceptPlanModal" style="display: none;">
        <div class="modal-background" onclick="$('#AcceptPlanModal').fadeOut('fast');"></div>
        <div class="modal-content">
            <div class="box">
                <div class="container">
                <p class="is-size-5 has-text-weight-bold">Approve the latest posted Tour Plan?</p>
                <p>This action cannot be undone.</p><br>

                <form id="acceptform" method="POST" action="/bookings/{{data.book.bookId}}/accept-plan">
                    <div class="field is-grouped is-grouped-centered mt-5 mb-5">
                        <div class="control">
                            <button class="button is-danger is-medium" type="button" onclick="$('#AcceptPlanModal').fadeOut('fast');">Cancel</button>
                        </div>
                        <div class="control">
                            <button class="button is-success is-medium" id="req_submit" type="submit" value="submit">Confirm</button>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>