<nav data-turbolinks-permanent class="navbar is-black" role="navigation" aria-label="main navigation" {{#if
    data.pageColor}} style="background: rgba({{data.pageColor}}) !important;" {{/if}}>
    <div class="container">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <img src="/static/logo.png">
            </a>
            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div class="navbar-menu has-background-black" {{#if data.pageColor}}
            style="background: rgba({{data.pageColor}}) !important;" {{/if}}>
            <div class="navbar-start">
                <a class="navbar-item has-text-white" href="/">
                    Home
                </a>
                <a class="navbar-item has-text-white" href="/marketplace">
                    Tours
                </a>
                <a class="navbar-item has-text-white" href="/helpdesk">
                    Support
                </a>
            </div>
            {{#if data.currentUser}}
            <div class="navbar-end">
                <a class="navbar-item has-tooltip-arrow has-tooltip-bottom" data-tooltip="Your Bookings"
                    href="/bookings">
                    <i class="fas fa-bookmark has-text-white"></i>
                    <span class="is-onlyMobile has-text-white">Bookings</span>
                </a>
                <a class="navbar-item has-tooltip-arrow has-tooltip-bottom" data-tooltip="Your Wishlist"
                    href="/wishlist">
                    <i class="fas fa-heart has-text-white"></i>
                    <span class="is-onlyMobile has-text-white">Wishlist</span>
                </a>
                <a class="navbar-item has-tooltip-arrow has-tooltip-bottom" data-tooltip="Your Inbox" href="/messages">
                    <i class="fas fa-comment-alt has-text-white"></i>
                    <span class="is-onlyMobile has-text-white">Messages</span>
                </a>
                <div id="accountDisplay" class="navbar-item has-dropdown is-hoverable">
                    <div class="navbar-item is-onlyDesktop">
                        <div class="profile-img"
                            style="background-image: url('/static/users/{{ data.currentUser.profile_img }}')"></div>
                    </div>

                    <div class="navbar-dropdown is-boxed is-right is-glass-white">
                        <div class="has-background-light p-4 mb-2 has-text-black">
                            <p class="has-text-weight-bold">Logged in as</p>
                            <p>{{ data.currentUser.name }}</p>
                        </div>
                        <a class="navbar-item" href='/u/profile/{{ data.currentUser.id }}'>
                            Your profile
                        </a>
                        <a class="navbar-item" href='/u/setting/general'>
                            Account settings
                        </a>
                        {{#ifEitherTrue data.currentUser.is_tourguide data.currentUser.is_admin}}
                        <hr class="navbar-divider">
                        {{/ifEitherTrue}}
                        {{#if data.currentUser.is_tourguide}}
                        <a class="navbar-item has-text-primary-dark" href='/tourguide'>
                            <i class="fas fa-store-alt"></i>&ensp;Tour Guide Dashboard
                        </a>
                        {{/if}}
                        {{#if data.currentUser.is_admin}}
                        <a class="navbar-item has-text-danger-dark" href='/admin'>
                            <i class="fas fa-users-cog"></i>&ensp;Admin Panel
                        </a>
                        {{/if}}
                        <hr class="navbar-divider">
                        <a href="/id/logout" class="navbar-item has-text-danger-dark">
                            <i class="fas fa-sign-out-alt"></i>&ensp;Sign out
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="navbar-end">
                <div class="navbar-item has-background-grey-darker">
                    <a href="/id/login"
                        class="navbar-item is-family-secondary has-text-white has-background-grey-darker">
                        <i class="fas fa-sign-in-alt"></i>&ensp;Login
                    </a>
                </div>
                <div class="navbar-item has-background-grey-dark">
                    <a href="/id/register"
                        class="navbar-item is-family-secondary has-text-white has-background-grey-dark">
                        <i class="fas fa-user-plus"></i>&ensp;Join
                    </a>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
